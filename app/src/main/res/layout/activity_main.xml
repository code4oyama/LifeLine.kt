<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/MainActivityHeaderLabel"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <!-- 現在地表示 -->
    <TextView
        android:id="@+id/tvLocationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="現在地を取得中..."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- 緯度経度表示 -->
    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="緯度・経度を取得中..."
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- 高齢者の人数入力欄 -->
    <EditText
        android:id="@+id/edtElderly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EditTextHint1"
        android:inputType="number"
        android:digits="0123456789"
        android:contentDescription="@string/ContentDescElderly"
        android:layout_marginBottom="8dp"
        tools:ignore="ContentDescription" />


    <!-- 赤ちゃんの人数入力欄 -->
    <EditText
        android:id="@+id/edtBaby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EditTextHint2"
        android:inputType="number"
        android:digits="0123456789"
        android:contentDescription="@string/ContentDescBaby"
        android:layout_marginBottom="8dp"
        tools:ignore="ContentDescription" />

    <!-- 男性の人数入力欄 -->
    <EditText
        android:id="@+id/edtMale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EditTextHint3"
        android:inputType="number"
        android:digits="0123456789"
        android:contentDescription="@string/ContentDescMale"
        android:layout_marginBottom="8dp"
        tools:ignore="ContentDescription" />

    <!-- 女性の人数入力欄 -->
    <EditText
        android:id="@+id/edtFemale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EditTextHint4"
        android:inputType="number"
        android:digits="0123456789"
        android:contentDescription="@string/ContentDescFemale"
        android:layout_marginBottom="16dp"
        tools:ignore="ContentDescription" />

    <!-- 避難場所検索ボタン -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ButtonText1"
        android:layout_marginTop="16dp" />

    <!-- 入力値クリアボタン -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="入力値をクリア"
        android:textSize="16sp"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp" />

</LinearLayout>
